<div class="registration-background" style='background-image: url("<%= cl_image_path 'deadpool-1200x675' %>");'>
  <div class="sign-box registration-box">

    <h2>Secret Identity</h2>

    <%= simple_form_for(@guard) do |f| %>

      <div class="form-inputs">
        <%= f.input :name %>
        <%= f.input :specialty, placeholder: "For example: Strong, Flying, Invisibilty."%>
        <%= f.input :rate %>
        <%= f.label 'Profile Picture' %>
        <%= f.file_field :picture, multiple: true%>
        <%= f.label 'Cover Photo' %>
        <%= f.file_field :picture, multiple: true%>
        <%= f.input :location, label: 'Head Quarter Location' %>
        <%= f.input :description %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Create", class:'btn-green btn-large' %>
      </div>
    <% end %>
  </div>
</div>
