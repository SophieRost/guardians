
<div class="card" >
  <div class="card-header" style ="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path gua.cover %>'); background-size: cover !important;
  background-position: top;">
  </div>
  <div class="card-details">
    <div class="card-title">
      <%= (cl_image_tag gua.picture, :height=>60, :width=>60, :crop=>"fill" ) %>
      <div>
        <h3><%= gua.name %></h3>
        <p>Specialty: <%= gua.specialty %></p>
      </div>
    </div>
  </div>
  <div class="guard-status">
    <%= render 'components/availability_symbol', gu: gua %>
  </div>
</div>

