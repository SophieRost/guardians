<% if booking.completed %>
  <div class="list-item completed">
<% else %>
  <div class="list-item">
<% end %>



    <%= cl_image_tag(booking.guard.profile_pic, :class=>'rounded-corners', :width=>100, :height=>100, :crop=>"fill") %>
    <div class="list-content">
      <%= link_to guard_path(booking.guard), class: 'list-link' do %>
        <h3><%= booking.guard.name %></h3>
      <% end %>
      <% if booking.completed %>
        <div id='accomplished-p'>
          <p>MISSION ACCOMPLISHED</p>
          <%= link_to new_guard_review_path(booking.guard) do %>
            <p class="review-link">Review <%= booking.guard.name %> for this Mission</p>
          <% end %>
        </div>
      <% elsif !booking.confirmed %>
        <p>PENDING MISSION REQUEST</p>
      <% else %>
        <p>ON YOUR MISSION</p>
      <% end %>
    </div>
    <div>
      <div>
        <% if !booking.confirmed %>
          <%= link_to cancel_booking_path(booking), remote: true do |f| %>
              <p class='btn-plain no-padding cancel-btn'>Cancel Mission</p>
          <% end %>
        <% else %>
          <%= link_to complete_mission_path(booking), remote: true do |f| %>
              <p class='btn-plain no-padding complete-btn'>Mark Mission as completed</p>
          <% end %>
        <% end %>
      </div>

      <%= cl_image_tag "https://res.cloudinary.com/dfcud6por/image/upload/v1542812431/Components/tick-full.svg", id:'tick-full'%>
    </div>



  </div>
