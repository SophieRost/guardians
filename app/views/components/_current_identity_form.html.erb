<div class="registration-background" style='background-image: url("<%= cl_image_path 'deadpool-1200x675' %>");'>
  <div class="sign-box registration-box">

    <h2>Current Identity</h2>

    <%= simple_form_for(@guard) do |f| %>

      <div class="form-inputs">
        <%= f.input :name, input_html: {value: "#{current_user.first_name} #{current_user.last_name}"}%>
        <%= f.input :specialty %>
        <%= f.input :rate %>
        <%= f.file_field :picture, multiple: true , label: 'Profile Picture'%>
        <%= f.file_field :picture, multiple: true, label: 'Cover Photo' %>
        <%= f.input :location, label: 'Head Quarter Location' %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Create", class:'btn-green btn-large' %>
      </div>
    <% end %>
  </div>
</div>

