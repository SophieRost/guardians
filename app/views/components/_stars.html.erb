<% counter = 0 %>

<% rev.each do |review| %>
  <% counter += review.rating %>
<% end %>

<% stars = counter.to_f / rev.size%>
<% stars = (stars*2).ceil.to_f / 2 %>

<div style= 'margin-left: 100px;'>
  <% stars.round(1).to_s.first.to_i.times do  %>
    <i class="fas fa-star"></i>
  <% end %>
  <% if stars.round(1).to_s.last.to_i == 5 %>
    <i class="fas fa-star-half-alt"></i>
  <% end %>
</div>



